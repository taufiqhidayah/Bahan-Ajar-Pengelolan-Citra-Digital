<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="id.ac.um.produkskripsi.materi.submateri.DetailMateri">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="7dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Judul"
                android:id="@+id/judulTutor"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/gbrMateri"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:layout_marginBottom="7dp"
                android:padding="7dp"
                android:id="@+id/isiTutor"
                android:text="Isi Materi"/>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/lihatTutor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="lihat video layer"
        android:background="@color/blue_gray_100"/>

</LinearLayout>
